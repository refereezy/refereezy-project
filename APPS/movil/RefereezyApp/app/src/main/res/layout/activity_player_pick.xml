<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.PlayerPickActivity">

    <TextView
        android:id="@+id/timer"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TimerTextStyle"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/scoreboard"
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        tools:layout="@layout/fragment_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer"/>

    <ScrollView

        app:layout_constraintTop_toBottomOf="@id/scoreboard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.gridlayout.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:columnCount="6">

            <!-- Botones -->

            <include layout="@layout/layout_player_pick" />

            <TextView
                style="@style/NormalButton"
                android:text="2" />

            <TextView
                style="@style/NormalButton"
                android:text="3" />

            <TextView
                style="@style/NormalButton"
                android:text="4" />

            <TextView
                style="@style/NormalButton"
                android:text="5" />

            <TextView
                style="@style/NormalButton"
                android:text="6" />

            <TextView
                style="@style/NormalButton"
                android:text="7" />

            <TextView
                style="@style/NormalButton"
                android:text="8" />

            <TextView
                style="@style/NormalButton"
                android:text="9" />

            <TextView
                style="@style/SpecialButton"
                android:text="13" />

            <TextView
                style="@style/NormalButton"
                android:text="14" />

            <TextView
                style="@style/NormalButton"
                android:text="99" />
        </androidx.gridlayout.widget.GridLayout>
    </ScrollView>


    <ImageButton
        android:layout_margin="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/transparent"
        android:src="@drawable/ic_turn"
        android:layout_width="50dp"
        android:padding="10dp"
        android:layout_height="50dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>