<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    >
    <net.orandja.shadowlayout.ShadowLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:shadow_color="@color/white"
        app:shadow_with_content="true"
        app:shadow_radius="8"
        app:shadow_with_color="false"
        app:shadow_cast_only_background="true"
        android:layout_margin="10dp"
        android:background="@drawable/player_circle"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="src_over"
        >

        <TextView
            android:id="@+id/dorsal"
            style="@style/SpecialButton"
            android:layout_margin="0dp"
            android:text="1"
            />

    </net.orandja.shadowlayout.ShadowLayout>

</LinearLayout>
